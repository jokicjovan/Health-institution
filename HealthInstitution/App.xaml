<Application x:Class="HealthInstitution.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HealthInstitution"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/Colors.xaml" />
                <ResourceDictionary Source="Theme/ButtonStyles.xaml" />
                <ResourceDictionary Source="Theme/LabelStyles.xaml" />
                <ResourceDictionary Source="Theme/TextBoxStyles.xaml" />
                <ResourceDictionary Source="Utility/DataTemplates.xaml" />
                <ResourceDictionary Source="Theme/DataGridStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
